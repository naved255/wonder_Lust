<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>wonderLand</title>
  <link rel="stylesheet" href="/css/output.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">

</head>

<body class="bg-light d-flex align-items-center justify-content-center min-vh-100">

  <% if (success && success.length > 0) { %>
    <div class="alert alert-success alert-dismissible fade show position-fixed top-0 w-100 rounded-0 mb-0" role="alert">
      <%= success %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>

  <% if (error && error.length > 0) { %>
    <div class="alert alert-danger alert-dismissible fade show position-fixed top-0 w-100 rounded-0 mb-0" role="alert">
      <%= error %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>

  <!-- Login Card -->
  <div class="card shadow-lg border-0 rounded-4 p-4 p-md-5" style="max-width: 420px; width: 100%;">
    <div class="d-flex justify-content-start mb-3">
      <a href="/" class="text-decoration-none">
        <button class="btn btn-outline-secondary btn-sm rounded-circle">
          <svg xmlns="http://www.w3.org/2000/svg" height="18px" viewBox="0 -960 960 960" width="18px" fill="#333">
            <path d="m313-440 224 224-57 56-320-320 320-320 57 56-224 224h487v80H313Z" />
          </svg>
        </button>
      </a>
    </div>

    <div class="text-center mb-4">
      <h2 class="fw-bold text-danger mb-0">Login</h2>
      <p class="text-muted small">Welcome back to <strong>WonderLand</strong></p>
    </div>

    <!-- Login Form -->
    <form action="/user/login" method="post" class="needs-validation" novalidate>
      <!-- Name -->
      <div class="mb-3">
        <label for="name" class="form-label fw-semibold">Full Name</label>
        <input 
          type="text" 
          class="form-control" 
          id="name" 
          name="name" 
          placeholder="Enter your full name" 
          required
        >
        <div class="invalid-feedback">Please enter your name.</div>
      </div>

      <!-- Username -->
      <div class="mb-3">
        <label for="username" class="form-label fw-semibold">Username</label>
        <input 
          type="text" 
          class="form-control" 
          id="username" 
          name="username" 
          placeholder="Enter your username" 
          required
        >
        <div class="invalid-feedback">Username cannot be empty.</div>
      </div>

      <!-- Password -->
      <div class="mb-4">
        <label for="password" class="form-label fw-semibold">Password</label>
        <input 
          type="password" 
          class="form-control" 
          id="password" 
          name="password" 
          placeholder="Enter your password" 
          required
        >
        <div class="invalid-feedback">Please enter your password.</div>
      </div>

      <!-- Submit Button -->
      <button type="submit" class="btn btn-danger w-100 fw-semibold py-2">
        Login
      </button>
    </form>

    <!-- Signup Link -->
    <div class="text-center mt-4 small">
      <p class="mb-0 text-secondary">Don't have an account?</p>
      <a href="/user/create" class="text-decoration-none fw-semibold text-primary">Create it</a>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
    crossorigin="anonymous"></script>

  <!-- Validation Script -->
  <script>
    (() => {
      'use strict';
      const forms = document.querySelectorAll('.needs-validation');
      Array.from(forms).forEach(form => {
        form.addEventListener('submit', event => {
          if (!form.checkValidity()) {
            event.preventDefault();
            event.stopPropagation();
          }
          form.classList.add('was-validated');
        }, false);
      });
    })();
  </script>

</body>


</html>